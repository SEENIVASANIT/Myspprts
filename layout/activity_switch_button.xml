<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tollbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ff00bf"
        app:title="SERCH MATHS"
        app:titleTextColor="#FFEB3B"
        tools:ignore="MissingConstraints" />

    <EditText

        android:id="@+id/match_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"



        android:background="#ffff"
        android:gravity="center"
        android:hint="Enter Maths Title"
        android:inputType="phone"
        android:maxLength="10"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="#ff0000"
        android:textColorHint="#ff0000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/date1"
        tools:ignore="MissingConstraints">


    </EditText>

    <Button
        android:id="@+id/callb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="356dp"
        android:text="Call"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        tools:ignore="MissingConstraints">

    </Button>

    <TextView
        android:id="@+id/date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"

        android:drawableRight="@drawable/ic_baseline_calendar_today_24"
        android:padding="8dp"
        android:text="set date"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tollbar"
        app:layout_constraintVertical_bias="0.354"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/url_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UEL"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/match_call"
        app:layout_constraintTop_toBottomOf="@+id/tollbar"
        app:layout_constraintVertical_bias="0.137"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp">

    </EditText>

    <Button
        android:id="@+id/down_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="181dp">

    </Button>
    <EditText
        android:id="@+id/url_d1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Url"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/callb"
        app:layout_constraintVertical_bias="0.137"
        tools:layout_editor_absoluteX="-2dp">

    </EditText>

    <Button
        android:id="@+id/down_url1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        app:layout_constraintTop_toBottomOf="@+id/url_d1"

        tools:ignore="MissingConstraints">

    </Button>
    <TextView
        android:id="@+id/counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/down_url1"
        android:text="COUNT"
        tools:ignore="MissingConstraints,UnknownId" />


</androidx.constraintlayout.widget.ConstraintLayout>
