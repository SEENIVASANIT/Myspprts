<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/text_page_backgrount" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ADD PLAYERS NAME LIST"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold|italic" />


            <EditText
                android:id="@+id/add_players"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_margin="15dp"
                android:background="@drawable/admain_text"
                android:drawablePadding="5dp"
                android:minHeight="320dp"
                android:gravity="start"
                android:hint="Add players name with our position!"
                android:padding="15dp"
                android:textStyle="italic|bold"

                />

            <TextView
                android:id="@+id/upload_players_to_firebase"
                android:layout_width="275dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_button"
                android:gravity="center"
                android:text="UPLOAD"
                android:textColor="#000"
                android:textSize="40dp"

                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:text="UPLOAD PLAYERS NAME,\nAND ALSO CLICK ADD BUTTON TO ADD PLAYERS NAMES!!!"
                android:textSize="20dp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/upload_players_processbra"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="67dp"
            android:layout_marginTop="585dp"

            android:progressTint="#FD0505"
            android:visibility="invisible" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="310dp"
            android:layout_marginTop="370dp"
            android:layout_alignTop="@id/add_players"
            android:layout_toEndOf="@+id/add_players"
            android:layout_alignParentBottom="@+id/add_players"
            android:layout_toStartOf="@+id/add_players"
            android:background="@drawable/ic_baseline_add_24"
            android:textColor="#EF0606"
            android:textSize="20dp"
            tools:ignore="NotSibling" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/add_players"
            android:layout_toEndOf="@+id/add_players"
            android:layout_alignParentBottom="@+id/add_players"
            android:layout_toStartOf="@+id/add_players"


            android:layout_marginStart="310dp"
            android:layout_marginTop="390dp"

            android:text="add"
            android:textColor="#EF0606"
            tools:ignore="NotSibling" />

    </RelativeLayout>



</ScrollView>