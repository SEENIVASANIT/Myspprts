<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Image_upload"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chose file"
            android:id="@+id/upload_image"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

        </Button>
        <EditText
            android:id="@+id/uploadtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:background="#F10606"
            android:minHeight="48dp"
            android:hint="Enter somthing"
            android:textColorHint="#000"
            android:textColor="#000">


        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>


    <Button
        android:id="@+id/uploadfierbase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="247dp"
        android:layout_marginBottom="30dp"
        android:text="Upload"
        tools:ignore="SpeakableTextPresentCheck">

    </Button>

    <Button
        android:id="@+id/showimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="30dp"
        android:text="show"
        tools:ignore="SpeakableTextPresentCheck">

    </Button>

    <ImageView
        android:id="@+id/imagehold"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:layout_above="@id/uploadfierbase"
        android:layout_below="@+id/uploadtitle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="66dp"

        tools:ignore="NotSibling,UnknownId">

    </ImageView>
</RelativeLayout>