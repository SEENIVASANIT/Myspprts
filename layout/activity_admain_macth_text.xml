<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#ff0000"
    tools:context=".Admain_maths_detali_page">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/mathsserch_toolbar"
        app:title="All Matchs"
        android:background="#ff00bf"
        app:titleTextColor="#FFEB3B"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/match_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

         android:layout_margin="2dp"
        android:background="#ffff"
        android:hint="Enter Maths Title"

        android:textStyle="bold"
        android:textColor="#ff0000"
        android:minHeight="48dp"
        android:textColorHint="#ff0000"
        android:padding="10dp">
    <!--android:maxLength="10"!-->
        <!--android:inputType="phone"-->
    </EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/matchss"
        android:layout_margin="2dp"
        android:background="#ffff"
        android:padding="10dp"
        android:inputType="textMultiLine |textCapSentences"
        android:minHeight="250dp"
        android:gravity="start"
        android:textColor="#000"
        android:textStyle="italic"
        android:hint="All detalis"
        android:textColorHint="#000">


    </EditText>

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:backgroundTint="@color/purple_700"
        android:drawableRight="@drawable/ic_baseline_calendar_today_24"
        android:padding="10dp"
        android:text="set date"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="58dp">

    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calunder"
        android:text="calender">

    </Button>


    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name">

    </Button>
    <Button
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW ALL"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name">

    </Button>


</LinearLayout>