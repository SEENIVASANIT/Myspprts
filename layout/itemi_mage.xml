<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">


            <ImageView
                android:id="@+id/show_image_views"
                android:layout_width="356dp"
                android:layout_height="480dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/loader_image"


                android:scaleType="centerCrop"


                >

            </ImageView>

            <TextView
                android:id="@+id/downlods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/show_image_views"
                android:layout_alignEnd="@+id/show_image_views"
                android:layout_marginTop="456dp"
                android:layout_marginEnd="21dp"

                android:background="@drawable/ic_baseline_arrow_downward_24">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@+id/show_image_views"
                android:background="@drawable/ic_baseline_delete_24"
                android:layout_marginLeft="30dp"
                android:layout_marginVertical="30dp"
                android:id="@+id/deleteimage"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/image_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:textSize="30dp"
            android:gravity="center"
            android:textColorHint="#E60A55"
            >

        </TextView>

    </LinearLayout>
</androidx.cardview.widget.CardView>