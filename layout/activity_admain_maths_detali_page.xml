<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#ff0000"
    tools:context=".Admain_maths_detali_page">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/mathsserch_toolbar"
        app:title="All Matchs"
        android:background="#ff00bf"
        app:titleTextColor="#FFEB3B"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/TITLE_maths"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#ffff"
        android:hint="Enter Maths Title"
        android:inputType="text"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:minHeight="48dp"
        android:textColorHint="#ff0000"
        android:padding="10dp">


    </EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/maths_place"
        android:layout_margin="2dp"
        android:background="#ffff"
        android:padding="10dp"
        android:inputType="textMultiLine |textCapSentences"
        android:minHeight="250dp"
        android:gravity="start"
        android:textColor="#000"
        android:textStyle="italic"
        android:hint="All detalis">


    </EditText>

    <Button
        android:id="@+id/save_detali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name">

    </Button>
    <Button
        android:id="@+id/shoe_save_maths_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name">

    </Button>


</LinearLayout>