<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nointernetlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_gravity="center"
    android:background="@drawable/internet_alort"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:elevation="4dp"
    tools:ignore="DuplicateIds">


   <ImageView
android:id="@+id/nointernet"
       android:layout_width="133dp"
       android:layout_height="142dp"
       android:layout_marginTop="10dp"
       android:contentDescription="@string/app_name"
       android:src="@drawable/ic_round_wifi_off"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"

       tools:ignore="MissingConstraints" />
<TextView
    android:id="@+id/textviii"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
   android:text="NO INTERNET CONNECTION!!!"
   android:textSize="20dp"
    android:textColor="#000"
    android:textStyle="bold"
   app:layout_constraintTop_toBottomOf="@+id/nointernet"
   app:layout_constraintEnd_toEndOf="@id/nointernet"
   app:layout_constraintStart_toStartOf="@id/nointernet"/>

<TextView
    android:id="@+id/subtitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:textStyle="italic"
    android:textColor="#393636"
    android:gravity="center"
   android:text="Please Check Your Internet Connectivity,                                        and tryagin!"
    app:layout_constraintTop_toBottomOf="@+id/textviii"
    app:layout_constraintEnd_toEndOf="@id/textviii"
    app:layout_constraintStart_toStartOf="@id/textviii"
    android:textSize="13dp"/>

   <TextView
       android:id="@+id/tryagin"
       android:layout_width="250dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="28dp"
       android:background="@drawable/admain_players_deatalis"
       android:gravity="center"
       android:text="Tryagin!"
       android:textColor="#000"
       android:textSize="25dp"
       android:textStyle="bold"
       app:layout_constraintEnd_toEndOf="@id/subtitle"
       app:layout_constraintHorizontal_bias="0.493"
       app:layout_constraintStart_toStartOf="@id/subtitle"
       app:layout_constraintTop_toBottomOf="@+id/subtitle" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="20dp"
       app:layout_constraintTop_toBottomOf="@+id/tryagin"
       app:layout_constraintEnd_toEndOf="@id/tryagin"
       app:layout_constraintStart_toStartOf="@id/tryagin">

   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>